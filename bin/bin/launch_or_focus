#!/bin/bash
CURR_WORKSPACE=$(wmctrl -d | grep \* | cut -d ' ' -f1)
# current workspace
WIN_ID=$(wmctrl -xl | awk -v desktop="$CURR_WORKSPACE" '$2 == desktop' | grep --ignore-case $1 | cut -d ' ' -f1 | tail -n 1)
# any workspace
#WIN_ID=$(wmctrl -xl | grep $1 | cut -d ' ' -f1 | tail -n 1)
# echo $WIN_ID
if [ "" = "$WIN_ID" ]  
then
    app=$1
    shift
    $app $* &
else
    wmctrl -i -a $WIN_ID
fi
