[core]
  editor = vim
  excludesfile = ~/.gitignore
[diff]
  tool = vimdiff3
[difftool]
  prompt = false
  # Be able to abort all diffs with `:cq` or `:cquit`
  trustExitCode = true
[difftool "vimdiff3"]
	path = nvim
[merge]
  tool = vimdiff3
[mergetool "vimdiff3"]
	path = nvim
[push]
  default = simple
[credential]
  helper = cache --timeout=2600000
[credential "https://github.com"]
  username = Curly-Mo
[credential "https://ghe.spotify.net"]
  username = colinfahy
[alias]
  remaster = "!f(){ git pull origin master --rebase --autostash; }; f"
  arc = "! f() { git tag archive/$1 $1 && git branch -d $1; }; f"
  arcl = "! f() { git tag | grep '^archive/';}; f"
  unarc = "! f() { git checkout -b $(echo $1 | sed -E 's/^archive\\///') && git tag -d $1; }; f "
  cleanup = "!f() { git branch --merged master | egrep -v '(^\\*|master|dev)' | xargs -n 1 git arc; }; f"
  fresh = "!f() { git checkout master && git pull; }; f"
  new = "!f() { git checkout master && git pull && git checkout -b $1; }; f"
[include]
  path = ~/.gituser
[color]
	ui = auto
